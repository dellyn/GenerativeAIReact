{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "lib": [
      "dom",
      "ES5",
      "ES6",
      "ES7",
      "ES2018",
      "ES2020"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "paths": {
      "#logic/*": [
        "src/modules/BoardScene/data/logic/*"
      ],
      "#data": [
        "src/modules/BoardScene/data/index.ts"
      ],
      "#tmp/*": [
        "./tmp/*"
      ],
      "#modules/*": [
        "./src/modules/*"
      ],
      "#components/*": [
        "./src/components/*"
      ],
      "#icons/*": [
        "./src/icons/*"
      ]
    },
  },
  "exclude": [
    "**/*.js",
    "**/*.mjs",
    "node_modules",
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "require": [
      "tsconfig-paths/register"
    ]
  }
}